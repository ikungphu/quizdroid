<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uw.ikungphu.quizdroid" >

    <uses-permission android:name="ANDROID.PERMISSION.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".QuizApp">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Preferences"></activity>
        <activity
            android:name=".OverviewFragment"
            android:label="@string/title_activity_quiz_overview" >
        </activity>
        <activity
            android:name=".QuestionFragment"
            android:label="@string/title_activity_quiz_question" >
        </activity>
        <activity
            android:name=".AnswerFragment"
            android:label="@string/title_activity_quiz_answer" >
        </activity>
        <activity android:name=".SecondActivity"></activity>
        <receiver android:name=".Receiver">
            <intent-filter>
                <action android:name="com.tutorialspoint.CUSTOM_INTENT"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>
